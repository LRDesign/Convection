- set_headline('List of Users')

%table.listing
  %tr
    %th Login
    %th Email
    %th Name
    %th Admin?
    %th{ :colspan => 2 }

  - for user in @users
    %tr
      %td= user.login
      %td= user.email
      %td= user.name
      %td{:style => "text-align: center;"}= bool_checked(user.admin?)

      %td= link_to 'Edit', edit_admin_user_path(user)
      %td= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete

%br

= button_to 'New user', new_admin_user_path, :method => :get
