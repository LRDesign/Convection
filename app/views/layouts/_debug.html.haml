- if ENV["RAILS_ENV"] == "development"
  #debug                                     
    %h2 Debugging Info
               
    -tabbed_panel do |tabctx|
      -tabctx.panel("Params") do
        - lrd_debug(params)      
      -tabctx.panel("Session") do
        - lrd_debug(session)
      -tabctx.panel("Emails")  do
        - lrd_debug(ActionMailer::Base.deliveries)
      -tabctx.panel("Env")  do
        - lrd_debug(request.env)               
